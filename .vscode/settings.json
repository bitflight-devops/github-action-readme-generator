  {
    "search.exclude": {
      // Avoid polluting search results with lockfile content
      "pnpm-lock.yaml": true,
    },
    "npm.packageManager": "pnpm",
    "git.ignoreLimitWarning": true,
    "eslint.validate": [
      "javascript",
      "typescript",
      "javascriptreact",
      "typescriptreact",
      "html"
    ],
    "eslint.options": {
      "extensions": [
        ".js",
        ".ts",
        ".mts",
        ".mjs",
        ".cjs",
        ".cts",
        "html"
      ]
    },
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
    },
    "eslint.debug": true,
    "json.schemas": [
      {
        "fileMatch": [
          "/.github/workflows/*.yml",
          "/.github/workflows/*.yaml"
        ],
        "url": "https://json.schemastore.org/github-workflow.json"
      },
      {
        "fileMatch": [
          "/package.json"
        ],
        "url": "https://json.schemastore.org/package.json"
      },
      {
        "fileMatch": [
          ".ncurc",
          ".ncurc.json",
        ],
        "url": "https://raw.githubusercontent.com/raineorshine/npm-check-updates/main/src/types/RunOptions.json"
      }
    ],
    "yaml.schemas": {
      "https://raw.githubusercontent.com/raineorshine/npm-check-updates/main/src/types/RunOptions.json": [
        ".ncurc.yml",
      ]
    },
    "typescript.tsdk": "./node_modules/typescript/lib"
  }
