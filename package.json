{
  "name": "github-action-readme-generator",
  "version": "1.0.12",
  "description": "This is a CLI tool and GitHub Action that reads in the details from a \nGitHub Action's `action.yml` file and updates the `README.md` file\nwith the `name`, `description`, `usage`, `inputs`, `outputs`, and\nexamples of the action.\nConfiguration can be provided via a `.ghadocs.json` file stored in the\nroot directory of the Action's repository, via the command line when\nusing the cli, or via the `with:` section of this Action.\n\n\nThis tool uses markdown comments as delimiting tokens within the `README.md`\nfile to determine where to place the generated content.\n\n[`README.example.md`](README.example.md) example with all fields filled in, and no other free-form content.",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "displayName": "bitflight-devops/github-action-readme-generator",
  "repository": "github:bitflight-devops/github-action-readme-generator",
  "bugs": {
    "url": "https://github.com/bitflight-devops/github-action-readme-generator/issues"
  },
  "keywords": ["actions", "github", "node16", "documentation", "github-actions", "generator"],
  "author": "Jamie Nelson <jamie@bitflight.io>",
  "license": "APACHE",
  "private": false,
  "scripts": {
    "test": "NODE_ENV=testing jest",
    "test-ci": "NODE_ENV=testing jest --ci --reporters=default --reporters=jest-junit",
    "build": "rimraf dist;esbuild --bundle src/index.ts --sourcemap=inline --platform=node --outfile=dist/index.js --sourcemap=external",
    "clean": "rimraf dist",
    "format": "prettier --list-different \"./{**/,}*.{ts,js,json,md,yml}\"",
    "format:fix": "prettier --write \"./{**/,}*.{ts,js,json,md,yml}\"",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "yon run format:fix;eslint . --ext .js,.ts --fix",
    "lint:markdown": "markdownlint \"**/*.md\" --config=.markdownlint.json --ignore-path=.markdownlintignore",
    "lint:markdown:fix": "yarn lint:markdown --fix",
    "all": "yon run build && yon run format && yon run lint && yon test",
    "postinstall": "echo 'âœ¨ Successfully Installed'",
    "commit": "git-cz",
    "pre-commit": "lint-staged && yon run build && git add dist && yon run generate-docs",
    "pre-push": "yon format:fix",
    "preversion": "echo 'Running test';yon run test",
    "version": "echo 'Run versioning commands';echo \"::set-output name=tag::v${npm_package_version}\"",
    "postversion": "echo 'Running post versioning commands';git push --tags -f && git push -f && echo \"Successfully released version $npm_package_version!\"",
    "generate-docs": "echo 'Generating docs';node dist/index.js && git add README.md dist",
    "prepare": "is-ci || husky install; yon run build"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghadocs": {
      "outpath": ".github/tools/generate-docs"
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "body-max-length": [0],
      "body-max-line-length": [0],
      "footer-max-length": [0],
      "footer-max-line-length": [0],
      "header-max-length": [0]
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": ["src", "dist"],
  "os": ["!win32"],
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.1",
    "chalk": "^5.0.1",
    "date-format": "^4.0.6",
    "js-yaml": "^4.1.0",
    "markdown-table": "^3.0.2",
    "nconf": "github:indexzero/nconf",
    "node-emoji": "^1.11.0",
    "prettier": "^2.6.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@Broadshield/prettier-config": "github:Broadshield/prettier-config",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/prompt": "^16.2.3",
    "@github/prettier-config": "^0.0.4",
    "@jest/types": "^27.5.1",
    "@prettier/plugin-ruby": "^2.1.0",
    "@prettier/plugin-xml": "^2.0.1",
    "@trunkio/launcher": "^1.0.4",
    "@tsconfig/node12": "^1.0.9",
    "@tsconfig/node16-strictest-esm": "^1.0.0",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/nconf": "^0.10.2",
    "@types/node": "^17.0.23",
    "@types/node-emoji": "^1.8.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@typescript-eslint/typescript-estree": "^5.18.0",
    "async": "^3.2.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.34",
    "esbuild-plugin-eslint": "^0.0.1",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-class-members": "^1.14.1",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "jest-circus": "^27.5.1",
    "jest-junit": "^13.1.0",
    "lint-staged": "^12.3.7",
    "markdownlint-cli": "^0.31.1",
    "minimal": "^0.2.1",
    "prettier-eslint": "^13.0.0",
    "prettier-plugin-java": "^1.6.1",
    "prettier-plugin-properties": "^0.1.0",
    "prettier-plugin-sh": "^0.10.1",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3",
    "typescript-eslint-language-service": "^5.0.0",
    "yarn-or-npm": "^3.0.1"
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml,sh}": "prettier --write",
    "{src,__tests__}/**/*.js": "eslint --cache --fix",
    "*.ts": ["eslint --cache --fix"]
  },
  "resolutions": {
    "typescript": "^4.6.3"
  }
}
